//- This layout is the defualt layout

doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width,initial-scale=1, minimum-scale=1,user-scalable=no,maximum-scale=1")
    meta(name="format-detection", content="telephone=no")
    meta(name="format-detection", content="address=no")
    meta(property="og:title",content=page.title)
    meta(property="og:type",content=page.posts?"list":"article")
    meta(property="og:url",content=`${config.url}/${page.path}`)
    meta(name="theme-color",content="#d5d5eb")
    link(rel="manifest",href=`${config.root}manifest.json`)
    //- meta(property="og:image",content="")
    title Jack Q's Blog
    != css('/css/main.css?v=20170715')
    block stylesheet
  body
    //- Main page content
    block content

    //- Google Analytics
    if config.googleAnalytics
      script.
        if(!window.ga){
          (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
          (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
          m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
          })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

          ga('create', '#{config.googleAnalyticsId}', 'auto');
          ga('send', 'pageview');
        }

    //- Page script
    != js('/js/jquery.min.js?v=20170715')
    != js('/js/main.js?v=20170715')
    block script