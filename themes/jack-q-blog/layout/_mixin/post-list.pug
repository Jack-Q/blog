mixin post-list(posts)
  .post-list-container
    .post-list-head
      .welcome 
        .text Welcome
        .desp
          ul
            li #[em #{site.posts.length} posts] in total
            li Updated at #[em #{site.posts.toArray()[0].date.format("YYYY-MM-DD")}]
            li Powered by 
              a(href="https://hexo.io/", target="_blank") HEXO
            li Hosted on 
              a(href="https://github.io/", target="_blank") GitHub.io 

            
    each post in (posts.toArray ? posts.toArray() : posts)
      .post-list-post
        a(href=url_for(post.path))
          .title= post.title
          .date= post.date.format('YYYY-MM-DD')
          .excerpt!= strip_html(post.excerpt)
          .more 
    .post-list-pagination
      .text  
        if page.total > 1
          if page.current === 1
            span.first
          else if page.current === page.total
            span.last
          else
            span.cur= page.current
          span.total= page.total
        else
          span.one
      .action
        if page.prev > 0
          a.prev(href=url_for(page.prev_link)) Prev Page
        if page.next > 0
          a.next(href=url_for(page.next_link)) Next Page